<h1><%= @post.title %></h1>
<%= image_tag @post.image.url(:large), class: "img-fluid" if @post.image? %>
<p><%= @post.body %></p>
<p>Author: <b><%= @post.user.email %></b><p> 
<% if user_signed_in? && current_user.id == @post.user_id %>
  <%= link_to 'Edit post', edit_post_path(@post), class: "btn btn-outline-warning" %>
  <%= link_to 'Delete post', post_path(@post), method: :delete, data: { confirm: 'Are you sure that you want to delete this post?'}, class: "btn btn-outline-danger" %>
<% end %>