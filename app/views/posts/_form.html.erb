<% if @post.errors.any? %>
  <div>
    <h5><%= t('common.errors') %></h5>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>  
  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_area :summary %>
  </div> 
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div> 
  <div class="button-group">
    <%= f.submit 'Save post', class: 'form-button-back' %>    
    <%= link_to 'Back', :back, class: 'form-button-back' %>
  </div> 

<% end %>

